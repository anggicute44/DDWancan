<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.app.ddwancan">

    <!-- Internet untuk API & Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="DDWancan"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DDWancan">

        <!-- ============================= -->
        <!-- ENTRY POINT (LAUNCHER) -->
        <!-- ============================= -->
        <activity
            android:name=".view.activity.WelcomeActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- ============================= -->
        <!-- AUTH & SECURITY -->
        <!-- ============================= -->
        <activity
            android:name=".view.activity.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.FingerprintActivity"
            android:exported="false" />

        <!-- ============================= -->
        <!-- HOME (INI YANG SEBELUMNYA HILANG / SALAH) -->
        <!-- ============================= -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- ============================= -->
        <!-- USER FEATURES -->
        <!-- ============================= -->
        <activity
            android:name=".view.activity.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.BeritaActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.ArticleDetailActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.CategoryActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.SearchActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.FavoriteActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.ProfileActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.EditProfileActivity"
            android:exported="false" />

        <!-- PERBAIKAN: Menambahkan SettingsActivity yang hilang -->
        <activity
            android:name=".view.activity.SettingsActivity"
            android:exported="false" />

        <!-- ============================= -->
        <!-- ADMIN -->
        <!-- ============================= -->
        <activity
            android:name=".view.activity.AdminLoginActivity"
            android:exported="false"
            android:label="Admin Login" />

        <activity
            android:name=".view.activity.AdminDashboardActivity"
            android:exported="false"
            android:label="Admin Dashboard" />

        <activity
            android:name=".view.activity.AdminHomeActivity"
            android:exported="false"
            android:label="Admin Home" />

        <activity
            android:name=".view.activity.ManageUsersActivity"
            android:exported="false"
            android:label="Manage Users" />

        <activity
            android:name=".view.activity.ManageCommentsActivity"
            android:exported="false"
            android:label="Manage Comments" />

        <activity
            android:name=".view.activity.AdminUpdateNewsActivity"
            android:exported="false"
            android:label="Admin Update News" />

    </application>

</manifest>
